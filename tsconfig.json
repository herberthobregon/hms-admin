{
	"compilerOptions": {
		"target": "es2017",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["esnext.array", "esnext", "es2017"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		// "strict": true,
		"noUnusedLocals": true,
		"outDir": "./",
		// Only necessary because @types/uglify-js can't find types for source-map
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"importHelpers": true
	},
	"include": ["custom_typings/**/*.ts", "src/**/*.ts"],
	"exclude": []
}
